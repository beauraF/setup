{
  "name": "setup",
  "private": true,
  "scripts": {
    "prettier:check": "prettier --check '**/*.{yml,md}'",
    "prettier:write": "prettier --write '**/*.{yml,md}'"
  },
  "devDependencies": {
    "husky": "^4.2.0",
    "lint-staged": "^10.0.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{yml,md}": [
      "npm run prettier:write",
      "git add"
    ],
    "*.rb": [
      "bundle exec rubocop --auto-correct --force-exclusion",
      "git add"
    ]
  }
}
